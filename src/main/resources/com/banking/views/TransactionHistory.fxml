<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.banking.controllers.TransactionHistoryController" stylesheets="@styles.css">

    <children>
        <Label text="Transaction History" textAlignment="CENTER" styleClass="title-label"/>

        <VBox alignment="CENTER_LEFT" spacing="15.0" styleClass="card" style="-fx-max-width: 800;">
            <Label fx:id="accountInfoLabel" text="Select an account to view transactions"/>

            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <Label text="Select Account:"/>
                <ComboBox fx:id="accountComboBox" prefWidth="200.0" styleClass="combo-box"/>
                <Button mnemonicParsing="false" onAction="#handleRefresh" text="Refresh" styleClass="primary-btn"/>
            </HBox>

            <TextArea fx:id="transactionArea" editable="false" prefHeight="400.0" prefWidth="760.0" styleClass="text-area"/>
        </VBox>
    </children>

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
</VBox>