<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.cell.PropertyValueFactory?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.banking.controllers.CustomerController" stylesheets="@styles.css">

    <top>
        <VBox spacing="10.0" styleClass="header-bar">
            <HBox alignment="CENTER_LEFT" spacing="20.0">
                <Label fx:id="welcomeLabel" text="Welcome, Customer!"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button mnemonicParsing="false" onAction="#handleLogout" text="Logout" styleClass="danger-btn"/>
            </HBox>
            <Label fx:id="balanceLabel" text="Balance: BWP0.00"/>
        </VBox>
    </top>

    <center>
        <SplitPane dividerPositions="0.3" styleClass="split-pane">
            <items>
                <!-- Left Panel -->
                <VBox spacing="15.0" styleClass="card">
                    <Label text="Your Accounts" styleClass="subtitle-label"/>
                    <ListView fx:id="accountsListView" VBox.vgrow="ALWAYS" styleClass="list-view"/>

                    <VBox spacing="10.0">
                        <Label text="Transactions" styleClass="subtitle-label"/>

                        <VBox spacing="5.0">
                            <Label text="Select Account:"/>
                            <ComboBox fx:id="accountComboBox" onAction="#handleAccountSelection" styleClass="combo-box"/>
                        </VBox>

                        <VBox spacing="5.0">
                            <Label text="Amount (BWP):"/>
                            <TextField fx:id="amountField" promptText="Enter amount" styleClass="input-field"/>
                        </VBox>

                        <HBox spacing="10.0">
                            <Button mnemonicParsing="false" onAction="#handleDeposit" text="Deposit" styleClass="success-btn" HBox.hgrow="ALWAYS"/>
                            <Button mnemonicParsing="false" onAction="#handleWithdraw" text="Withdraw" styleClass="accent-btn" HBox.hgrow="ALWAYS"/>
                        </HBox>

                        <Button mnemonicParsing="false" onAction="#handleViewTransactions" text="View Transaction History" styleClass="accent-btn"/>
                    </VBox>
                </VBox>

                <!-- Right Panel -->
                <VBox spacing="10.0" styleClass="card">
                    <Label text="Transaction History" styleClass="subtitle-label"/>
                    <TableView fx:id="transactionTable" VBox.vgrow="ALWAYS" styleClass="table-view">
                        <columns>
                            <TableColumn text="Date" prefWidth="100">
                                <cellValueFactory>
                                    <PropertyValueFactory property="formattedDate" />
                                </cellValueFactory>
                            </TableColumn>
                            <TableColumn text="Time" prefWidth="80">
                                <cellValueFactory>
                                    <PropertyValueFactory property="formattedTime" />
                                </cellValueFactory>
                            </TableColumn>
                            <TableColumn text="Type" prefWidth="100">
                                <cellValueFactory>
                                    <PropertyValueFactory property="type" />
                                </cellValueFactory>
                            </TableColumn>
                            <TableColumn text="Amount" prefWidth="100">
                                <cellValueFactory>
                                    <PropertyValueFactory property="formattedAmount" />
                                </cellValueFactory>
                            </TableColumn>
                            <TableColumn text="Balance" prefWidth="100">
                                <cellValueFactory>
                                    <PropertyValueFactory property="formattedBalance" />
                                </cellValueFactory>
                            </TableColumn>
                        </columns>
                    </TableView>
                </VBox>
            </items>
        </SplitPane>
    </center>

    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
</BorderPane>