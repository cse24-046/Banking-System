<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<ScrollPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.banking.controllers.AccountOpeningController" stylesheets="@styles.css">

    <content>
        <VBox alignment="TOP_CENTER" spacing="20.0">
            <Label text="Open New Account" textAlignment="CENTER" styleClass="title-label"/>

            <VBox alignment="CENTER_LEFT" spacing="15.0" styleClass="card" style="-fx-max-width: 600;">
                <VBox  spacing="5" styleClass="card" style="-fx-background-color: #f0f8ff; -fx-padding: 10;" fx:id="accountLimitsText">
                     <Label text="Account Limits:" styleClass="subtitle-label"/>
                     <Label text="• Maximum 3 accounts per customer"/>
                     <Label text="• Maximum 1 account of each type per customer"/>
                     <Label text="• Investment account requires minimum BWP500.00 initial deposit"/>
                     <Label text="• Cheque account requires employment information"/>
                     <Label text="• Password only required for new customers"/>
                </VBox>


                <Label text="Customer Information" styleClass="subtitle-label"/>

                <GridPane hgap="10.0" vgap="10.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="300.0"/>
                    </columnConstraints>

                    <children>
                        <Label text="Customer ID:" GridPane.rowIndex="0"/>
                        <TextField fx:id="customerIdField" promptText="Enter customer ID" styleClass="input-field" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                        <Label text="Full Name:" GridPane.rowIndex="1"/>
                        <TextField fx:id="customerNameField" promptText="Enter full name" styleClass="input-field" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                        <Label text="Customer Type:" GridPane.rowIndex="2"/>
                        <ComboBox fx:id="customerTypeCombo" prefWidth="300.0" styleClass="combo-box" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                    </children>
                </GridPane>

                <VBox fx:id="passwordFieldContainer" spacing="10.0">
                    <Label text="Password (for new customers):"/>
                    <PasswordField fx:id="passwordField" promptText="Enter password for new customer" styleClass="input-field"/>
                </VBox>

                <VBox fx:id="companyFields" spacing="10.0" visible="false">
                    <Label text="Company Information" styleClass="subtitle-label"/>
                    <GridPane hgap="10.0" vgap="10.0">
                        <columnConstraints>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0"/>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="300.0"/>
                        </columnConstraints>
                        <children>
                            <Label text="Registration Number:"/>
                            <TextField fx:id="companyRegField" styleClass="input-field" GridPane.columnIndex="1"/>
                        </children>
                    </GridPane>
                </VBox>

                <Separator prefWidth="200.0" styleClass="separator"/>

                <Label text="Account Information" styleClass="subtitle-label"/>
                <GridPane hgap="10.0" vgap="10.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="300.0"/>
                    </columnConstraints>

                    <children>
                        <Label text="Account Type:" GridPane.rowIndex="0"/>
                        <ComboBox fx:id="accountTypeCombo" prefWidth="300.0" styleClass="combo-box" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                        <Label text="Initial Deposit (BWP):" GridPane.rowIndex="1"/>
                        <TextField fx:id="initialDepositField" styleClass="input-field" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                    </children>
                </GridPane>

                <VBox fx:id="chequeFields" spacing="10.0" visible="false">
                    <Label text="Employment Information" styleClass="subtitle-label"/>
                    <GridPane hgap="10.0" vgap="10.0">
                        <columnConstraints>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0"/>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="300.0"/>
                        </columnConstraints>
                        <children>
                            <Label text="Employer Name:"/>
                            <TextField fx:id="employerField" styleClass="input-field" GridPane.columnIndex="1"/>

                            <Label text="Company Address:" GridPane.rowIndex="1"/>
                            <TextField fx:id="companyAddressField" styleClass="input-field" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                        </children>
                    </GridPane>
                </VBox>

                <Label fx:id="messageLabel" wrapText="true"/>
                <Button mnemonicParsing="false" onAction="#handleOpenAccount" text="Open Account" styleClass="primary-btn"/>
            </VBox>
        </VBox>
    </content>
</ScrollPane>
