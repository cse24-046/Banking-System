<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane stylesheets="@styles.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.banking.controllers.BankClerkController">

    <top>
        <VBox spacing="10.0" styleClass="header-bar">
            <HBox alignment="CENTER_LEFT" spacing="20.0">
                <Label text="Bank Clerk Dashboard" />
                <Region HBox.hgrow="ALWAYS" />
                <Button mnemonicParsing="false" onAction="#handleRefresh" styleClass="success-btn" text="Refresh Data" />
                <Button mnemonicParsing="false" onAction="#handleLogout" styleClass="danger-btn" text="Logout" />
            </HBox>
            <Label fx:id="statsLabel" text="Loading statistics..." />
        </VBox>
    </top>

    <center>
        <TabPane fx:id="mainTabPane" tabClosingPolicy="UNAVAILABLE">
            <tabs>

                <Tab text="Dashboard">
                    <content>
                        <VBox spacing="20.0">
                            <HBox spacing="20.0">
                                <VBox prefHeight="734.0" prefWidth="327.0" spacing="15.0" styleClass="card" HBox.hgrow="ALWAYS">
                                    <Label styleClass="subtitle-label" text="Quick Actions" />
                                    <Button mnemonicParsing="false" onAction="#handleApplyInterest" styleClass="success-btn" text="Apply Monthly Interest" />
                                    <Button mnemonicParsing="false" onAction="#handleOpenAccountTab" styleClass="accent-btn" text="Open New Account" />
                                   <Label styleClass="subtitle-label" text="Customer Account Details" />
                                   <TextArea fx:id="customerDetailsArea" editable="false" prefHeight="296.0" prefWidth="285.0" styleClass="text-area" />
                                </VBox>

                                <VBox spacing="15.0" styleClass="card" HBox.hgrow="ALWAYS">
                                    <Label styleClass="subtitle-label" text="Customer Filter" />
                                    <ComboBox fx:id="customerFilterCombo" styleClass="combo-box" />
                                    <Label styleClass="subtitle-label" text="Customer List" />
                                    <ListView fx:id="customersListView" styleClass="list-view" VBox.vgrow="ALWAYS" />
                                </VBox>
                            </HBox>
                        </VBox>
                    </content>
                </Tab>
                <Tab text="Open Account">
                    <content>
                        <fx:include source="AccountOpening.fxml" />
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </center>

    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
</BorderPane>